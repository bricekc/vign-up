<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="Vign'Up">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/img/favicon.png">
        <link href="{{ asset('/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/footer.css') }}" rel="stylesheet">
        <script src="https://kit.fontawesome.com/4d6f049da5.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
              integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI="
              crossorigin=""/>
        <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"
                integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM="
                crossorigin=""></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <nav class="mobile-nav">
            <img class="logo" src="/img/logo.png" alt="Image du logo de Vign'up">
            <a class="navbar_lien" href="{{ path('app_home') }}">Fil d'actualité</a>
            <a class="navbar_lien" href="{{ path('app_carte') }}">Carte</a>
            <a class="navbar_lien" href="{{ path('app_fournisseur') }}">Fournisseur & Prestataire</a>
            <a class="navbar_lien" href="{{ path('app_rubrique') }}">Documentation</a>
            <a class="navbar_lien" href="{{ path('app_questionnaire')}}">Auto-évaluation</a>
            <a class="navbar_lien" href="{{ path('app_sujet') }}">Forum</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="navbar_lien" href="{{ path('app_espace_admin') }}">Espace Administrateur</a>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                <a class="navbar_lien" href="{{ path('app_user', {id : app.user.id}) }}">{{ app.user.firstname }}</a>
            {% else %}
                <a class="navbar_lien" href="{{ path('app_login') }}">Se connecter</a>
            {% endif %}
    </nav>
    <nav class="navigation">
        <ul>
            <li><a class="navbar_lien" href="{{ path('app_home') }}"><img class="logo" src="/img/logo.png" alt="Image du logo de Vign'up"></a></li>
            <li><a class="navbar_lien" href="{{ path('app_carte') }}">Carte</a></li>
            <li><a class="navbar_lien" href="{{ path('app_fournisseur') }}">Fournisseur & Préstataire</a></li>
            <li><a class="navbar_lien" href="{{ path('app_rubrique') }}">Documentation</a></li>
            <li><a class="navbar_lien" href="{{ path('app_questionnaire')}}">Auto-évaluation</a></li>
            <li><a class="navbar_lien" href="{{ path('app_sujet') }}">Forum</a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li><a class="navbar_lien" href="{{ path('app_espace_admin') }}">Espace Administrateur</a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                <li><a class="navbar_lien" href="{{ path('app_user', {id : app.user.id}) }}">{{ app.user.firstname }}</a></li>
            {% else %}
                <li><a class="navbar_lien" href="{{ path('app_login') }}">Se connecter</a></li>
            {% endif %}
        </ul>
    </nav>
        <body>
    <button class="hamburger">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </button>
    {% block body %}{% endblock %}
            <footer>
                <div class="footer-content">
                    <h3>Vign'Up</h3>
                    <p></p>
                    <div class="social-media">
                        <a href="https://www.facebook.com/chambresagriculturevignoblechampenois/"><i class="fa fa-facebook-official" aria-hidden="true"></i></a>
                        <a href="https://twitter.com/ChambreAgri51"><i class="fa fa-twitter-square" aria-hidden="true"></i></a>
                        <a href="https://www.youtube.com/@chambresdagricultureduvign4044/featured"><i class="fa-brands fa-square-youtube" aria-hidden="true"></i></a>
                        <a href="https://vignoble-champenois.chambres-agriculture.fr/"><i class="fa-solid fa-globe" aria-hidden="true"></i></a>
                    </div>
                </div>
            </footer>
            <script src="{{ asset('js/main.js') }}"></script>
    </body>
</html>
